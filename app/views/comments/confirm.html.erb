<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @comment, url: comments_path, local: true, method: 'post') do |form| %>
    <%= form.hidden_field :content %>
    
    <p>コメント：</p>
    <p><%= @comment.content %></p>
    <p><%= form.submit "登録する" %></p>
<% end %>

<%= form_with(model: @comment, url: new_comment_path, local: true, method: 'get') do |form| %>
    <%= form.hidden_field :content %>
    <%= form.submit "もどる", name: 'back' %>
<% end %>